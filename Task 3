#include <stdio.h>
#define MAX 32

int m[MAX];	// Ìàñèâ äëÿ çáåðåæåííÿ ÷èñåë

int main() {
    int p;	// Çì³ííà äëÿ çáåðåæåííÿ ââåäåíîãî ÷èñëà
    scanf("%d", &p);	// Ç÷èòóâàííÿ ÷èñëà p ç êîíñîë³
    m[1] = 2;	// Ïåðøå ÷èñëî
    m[2] = 4;	// Äðóãå ÷èñëî
    for (int i = 3; i <= p; i++) {
        m[i] = m[i - 1] + m[i - 2];	// Îá÷èñëåííÿ íàñòóïíîãî ÷èñëà ÿê ñóìè äâîõ ïîïåðåäí³õ ÷èñåë
    }
    printf("%d\n", m[p]);	// Âèâåäåííÿ çíà÷åííÿ m[p], äå p - ââåäåíå ÷èñëî
    return 0;
}
